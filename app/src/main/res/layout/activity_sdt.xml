    <ImageView
        android:id="@+id/ic_chip"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/ic_chip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proceed"
        android:text="NHẬN QUÀ NGAY"
        android:textStyle="bold"
        android:textSize="22sp"
        android:paddingBottom="20dp"
        android:layout_width="299dp"
        android:layout_height="81dp"
        android:background="@drawable/proceedbtn"
        android:onClick="clickme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.401"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextNumber"
        android:textColor="@color/black"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="55dp"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        android:hint="Nhập vào đây"
        android:inputType="number"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/proceed"
        app:layout_constraintEnd_toEndOf="@+id/ic_chip"
        app:layout_constraintTop_toTopOf="@+id/ic_chip"
        app:layout_constraintVertical_bias="0.01" />


</androidx.constraintlayout.widget.ConstraintLayout>