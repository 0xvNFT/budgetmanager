<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settingtab.CongFragment">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Công Cụ Chuyển Đổi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <ImageView
        android:layout_width="311dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="240dp"
        android:src="@drawable/rect_currency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="147dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="Tiền Tệ"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508" />

    <TextView
        android:id="@+id/textview_converted_amount"
        android:layout_width="202dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Số Lượng"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Từ"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text="Sang"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="320dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextAmountToConvert"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:layout_marginHorizontal="50dp"
        android:hint="Số tiền để chuyển đổi"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="374dp" />

    <Spinner
        android:id="@+id/spinner_to_currency"
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="50dp"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="313dp" />

    <Spinner
        android:id="@+id/spinner_from_currency"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginHorizontal="50dp"
        tools:layout_editor_absoluteX="252dp"
        tools:layout_editor_absoluteY="272dp" />

    <ImageView
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:src="@drawable/convertbtn"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="425dp" />


</androidx.constraintlayout.widget.ConstraintLayout>