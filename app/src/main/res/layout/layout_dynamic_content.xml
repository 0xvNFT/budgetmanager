<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewDynamicTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khác"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textViewStaticDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu trữ số tiền chi tiêu của bạn hàng ngày, để quản lý dễ dàng hơn"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/textViewStaticLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số Tiền Chi Tiêu"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/editTextDynamicAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập Vào Đây"
        android:inputType="numberDecimal"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu Lại" />

</LinearLayout>